// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id               String @id @default(uuid())
  responsable_name String
  email            String @unique
  password_hash    String
  cep              String
  address          String
  whatsapp         String

  created_at DateTime
  dogs       Dog[]

  @@map("orgs")
}

model Dog {
  id           String @id @default(uuid())
  name         String
  description  String
  age          String
  size         String
  energy       String
  independence String
  environment  String
  org          Org    @relation(fields: [org_id], references: [id])
  org_id       String

  @@map("dogs")
}
